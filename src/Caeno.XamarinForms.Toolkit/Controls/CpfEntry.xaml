<?xml version="1.0" encoding="UTF-8"?>
<StackLayout 
  xmlns="http://xamarin.com/schemas/2014/forms" 
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:toolkit="clr-namespace:Caeno.XamarinForms.Toolkit"
  x:Class="Caeno.XamarinForms.Toolkit.Controls.CpfEntry">
  <StackLayout.Resources>
    <ResourceDictionary>
      <Style TargetType="Entry">
        <Setter Property="Margin" Value="0" />
      </Style>
      <Style TargetType="Label">
        <Setter Property="Margin" Value="0" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
      </Style>
    </ResourceDictionary>
  </StackLayout.Resources>

  <Entry
		x:Name="CpfSegment1Entry"
		Placeholder="999"
		Keyboard="Numeric"
		TextChanged="TextChanged">
    <Entry.Behaviors>
      <toolkit:MaskedEntryBehavior
				NextElement="{x:Reference CpfSegment2Entry}"
				InputType="Numeric"
				MaxLenght="3" />
    </Entry.Behaviors>
  </Entry>
  <Label Text="." />
  <Entry
		x:Name="CpfSegment2Entry"
		Keyboard="Numeric"
		Placeholder="999"
		TextChanged="TextChanged">
    <Entry.Behaviors>
      <toolkit:MaskedEntryBehavior
				NextElement="{x:Reference CpfSegment3Entry}"
				InputType="Numeric"
				MaxLenght="3" />
    </Entry.Behaviors>
  </Entry>
  <Label Text="." />
  <Entry
		x:Name="CpfSegment3Entry"
		Keyboard="Numeric"
		Placeholder="999"
		TextChanged="TextChanged">
    <Entry.Behaviors>
      <toolkit:MaskedEntryBehavior
				NextElement="{x:Reference CpfSegment4Entry}"
				InputType="Numeric"
				MaxLenght="3" />
    </Entry.Behaviors>
  </Entry>
  <Label Text="-" />
  <Entry
		x:Name="CpfSegment4Entry"
		Keyboard="Numeric"
		Placeholder="99"
		TextChanged="TextChanged">
    <Entry.Behaviors>
      <toolkit:MaskedEntryBehavior
				InputType="Numeric"
				MaxLenght="2" />
    </Entry.Behaviors>
  </Entry>  
</StackLayout>
