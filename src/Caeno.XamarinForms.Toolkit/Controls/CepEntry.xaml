<?xml version="1.0" encoding="UTF-8"?>
<StackLayout
  xmlns="http://xamarin.com/schemas/2014/forms" 
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
  xmlns:toolkit="clr-namespace:Caeno.XamarinForms.Toolkit"
  x:Class="Caeno.XamarinForms.Toolkit.CepEntry"
  Orientation="Horizontal">
  <StackLayout.Resources>
    <ResourceDictionary>
      <Style TargetType="Entry">
        <Setter Property="Margin" Value="0" />
      </Style>
      <Style TargetType="Label">
        <Setter Property="Margin" Value="0" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
      </Style>
    </ResourceDictionary>
  </StackLayout.Resources>

  <Entry
		x:Name="CepSegment1Entry"
		Keyboard="Numeric"
		Placeholder="99999"
		TextChanged="TextChanged"
    WidthRequest="80">
    <Entry.Behaviors>
      <toolkit:MaskedEntryBehavior
				NextElement="{x:Reference CepSegment2Entry}"
				InputType="Numeric"
				MaxLenght="5" />
    </Entry.Behaviors>
  </Entry>
  <Label Text="-" />
  <Entry
		x:Name="CepSegment2Entry"
		Keyboard="Numeric"
		Placeholder="999"
		TextChanged="TextChanged">
    <Entry.Behaviors>
      <toolkit:MaskedEntryBehavior
				InputType="Numeric"
				MaxLenght="3" />
    </Entry.Behaviors>
  </Entry>
</StackLayout>
